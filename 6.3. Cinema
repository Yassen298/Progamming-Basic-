using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Cinema
{
    class Program
    {
        static void Main(string[] args)
        {
            var progection = Console.ReadLine();
            var redove = int.Parse(Console.ReadLine());
            var koloni = int.Parse(Console.ReadLine());
            if (progection == "Premiere")
            {
                var result1 = redove * koloni * 12;
                Console.WriteLine("{0:f2}", result1);
            }
            if (progection == "Normal")
            {
                var result2 =redove * koloni * 7.5;
                Console.WriteLine("{0:f2}", result2);
            }
            if (progection == "Discount")
            {
                var result3= redove * koloni * 5;
                Console.WriteLine("{0:f2}", result3);
            }

        }
    }
}
